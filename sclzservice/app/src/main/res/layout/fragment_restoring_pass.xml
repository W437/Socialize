<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alsalam.sclzroot.MyFragments.RestoringPassFragment">


    <android.support.design.widget.TextInputLayout

        android:id="@+id/firstQuestionEWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4px"
        android:ems="10"
        android:layout_gravity="center_horizontal">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Enter Your Restoring Password Key"
        android:id="@+id/et_EnterKEY"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:id="@+id/tv_YourPassword"
        android:padding="15dp"
        android:hint="Your Password Will Appear Here"/>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:padding="10dp">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/btn_Check"
        android:layout_weight="1" />
         <Button
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Ok"
             android:id="@+id/btn_Ok"
             android:layout_weight="1" />
     </LinearLayout>
</LinearLayout>
