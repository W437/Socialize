<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alsalam.sclzroot.MyFragments.AddEventFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SELECT EVENT TYPE"
            android:id="@+id/tvselect_type"
          />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnType"
           />




        <android.support.design.widget.TextInputLayout
            android:paddingTop="40dp"
            android:id="@+id/LIMITWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etLimit"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="PARTICIPANTS LIMIT" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:paddingTop="40dp"
            android:id="@+id/EVENTPROPERITIESWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/etProp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="EVENT PROPERITIES" />


        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">



            <android.support.design.widget.TextInputLayout
                android:paddingTop="40dp"
                android:id="@+id/BeginningWrapper"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etBegT"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="BEGINNING TIME "
                android:layout_weight="1" />

            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:paddingTop="40dp"
                android:id="@+id/EndingWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.57">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/etEndT"
                android:hint="ENDING TIME"
                android:layout_weight="1" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:paddingTop="40dp"
            android:id="@+id/AgeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etAge"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="AGE RANGE " />


        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:paddingTop="40dp"
            android:id="@+id/LocationWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etLocation"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="EVENT&apos;S LOCATION" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LOCATION :"
            android:id="@+id/tvRole"
           />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:orientation="horizontal">

            <RadioButton
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="INDOORS"
              android:id="@+id/rdb_in"
              android:checked="false"
                android:layout_weight="1" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="OUTDOORS"
                android:id="@+id/rdb_out"
                 android:checked="false"
                android:layout_weight="1" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="GENDER PREFERENCE"
            android:id="@+id/tvGen"
           />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEMALE"
            android:id="@+id/rdb_female"
             android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MALE"
            android:id="@+id/rdb_male"
            android:checked="false" />


    </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:paddingTop="40dp"
            android:id="@+id/PURPOSEWrapperWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPurp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="EVENT PURPOSE" />


        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:id="@+id/btnDone"
            android:layout_alignBottom="@+id/etPurp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

</ScrollView>


</RelativeLayout>
