<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <!-- A hhhhhhhCardView that contains a TextView -->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:background="@color/primary_light"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/summary2"
        android:layout_alignParentStart="true"
        android:text="z">

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvAdrerss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:layout_marginLeft="5dp"
        android:text="Adress"
        android:layout_above="@+id/btPartic"
        android:layout_alignEnd="@+id/btMore" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:text="@string/Event_title"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"

        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/statTv"
        android:layout_alignBottom="@+id/statTv"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/statTv"
        android:layout_marginStart="58dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tvAdrerss" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="text ddd"
        android:id="@+id/summary2"
        android:layout_above="@+id/statTv"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTime2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Participation"
        android:id="@+id/btPartic"
        android:src="@mipmap/ic_count"
        android:background="#0000"
        android:layout_alignBottom="@+id/card_view"
        android:layout_alignParentStart="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/More"
        android:id="@+id/btMore"
        android:src="@mipmap/ic_sahim"
        android:background="#0000"
        android:layout_alignBottom="@+id/card_view"
        android:layout_alignStart="@+id/tvTime2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:id="@+id/tvTime"
        android:layout_below="@+id/eventTitle"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvTime2"
        android:layout_gravity="right"
        android:layout_below="@+id/tvTime"
        android:layout_alignEnd="@+id/statusTv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/statusTv"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/card_view" />

</RelativeLayout>