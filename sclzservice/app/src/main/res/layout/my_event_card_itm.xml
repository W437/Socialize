<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >


    <include layout="@layout/event_card_itm"
        android:id="@+id/include" android:layout_width="match_parent" android:layout_height="wrap_content" />







            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btEdit"
                android:src="@mipmap/ic_edit"
                android:background="#0000"
                android:layout_gravity="center_horizontal"
                android:layout_alignBottom="@+id/include"
                android:layout_toStartOf="@+id/delEven" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delEven"
                android:src="@mipmap/ic_delete"
                android:background="#0000"
                android:layout_alignBottom="@+id/include"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="32dp" />





</RelativeLayout>
