<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alsalam.sclzroot.MyFragments.AddEventFragment"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:paddingTop="0dp"
            android:id="@+id/TitleWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etTitle"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="@string/event_title" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:paddingTop="0dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etDescription"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/Description"
            android:inputType="textMultiLine" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:paddingTop="0dp"
            android:id="@+id/LIMITWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etLimit"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="@string/Participants_limit"
                android:inputType="numberSigned" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:paddingTop="0dp"
            android:id="@+id/EVENTPROPERITIESWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etRequirments"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="@string/Requirements"
                android:inputType="textMultiLine" />


        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <android.support.design.widget.TextInputLayout
                android:paddingTop="0dp"
                android:id="@+id/eventDateWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/etEventDate"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:hint="@string/Date" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:paddingTop="0dp"
                android:id="@+id/BeginningWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/etTime"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:hint="@string/Time"
                    android:layout_weight="1" />

            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:paddingTop="0dp"
                android:id="@+id/EndingWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/etHours"
                    android:hint="@string/Hours"
                    android:layout_weight="1"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:paddingTop="0dp"
            android:id="@+id/AgeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAge"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="@string/Age_range" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:paddingTop="0dp"
            android:id="@+id/LocationWrapper"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:paddingTop="0dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/cstm"
                android:layout_weight="1.15">

                <EditText
                    android:layout_width="299dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etLocation"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:hint="@string/Event_location" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/getLocBtn"
                android:src="@drawable/locate" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/Location"
            android:id="@+id/tvRole"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/rgLocation"
                android:weightSum="1"
                android:layout_weight="1">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/In_doors"
                    android:id="@+id/rdb_in"
                    android:checked="false"
                    android:layout_weight="0.33" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Out_doors"
                    android:id="@+id/rdb_out"
                    android:checked="false"
                    android:layout_weight="0.33" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Both"
                    android:id="@+id/rbBothLoc"
                    android:checked="false"
                    android:layout_weight="0.33" />
            </RadioGroup>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/Gender_preference"
            android:id="@+id/tvGen"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:id="@+id/rgGender">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Female"
                    android:id="@+id/rdb_female"
                    android:checked="false"
                    android:layout_weight="0.33" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Male"
                    android:id="@+id/rdb_male"
                    android:checked="false"
                    android:layout_weight="0.33" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/both"
                    android:id="@+id/rbBothG"
                    android:checked="false"
                    android:layout_weight="0.33" />

            </RadioGroup>


        </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:paddingTop="0dp"
            android:id="@+id/PURPOSEWrapperWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Add_event"
            android:id="@+id/btnDone"
            android:layout_alignBottom="@+id/etDescription"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>



</ScrollView>
